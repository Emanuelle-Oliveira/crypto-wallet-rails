<%#= Layout é renderizado com todas as views %>

<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= carrega de acordo com a controller %> 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'scaffolds', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag params[:       controller], 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1> Cabeçalho <%= params[:controller]%> </h1>
    <%= yield %> <%#= Página index / view %>
    <h1> Rodapé </h1>

    <script>
      $.notify("Funcionou!", "success");
    </script>
  </body>
</html>
